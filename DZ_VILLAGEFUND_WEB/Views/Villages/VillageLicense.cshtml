@model DZ_VILLAGEFUND_WEB.ViewModels.Villages.VillagesViewModel
@{
    // title page
    ViewData["Title"] = "ออกใบอนุญาติ";
    var Helper = ViewBag.Helper as DZ_VILLAGEFUND_WEB.Helpers.Utility;
}

<ol class="breadcrumb page-breadcrumb header">
    <li class="breadcrumb-item"><a href="/Home/Index">หน้าหลัก</a></li>
    <li class="breadcrumb-item"><a href="/Villages/VillageIndex">ข้อมูลทะเบียนกองทุนหมู่บ้าน</a></li>
    <li class="breadcrumb-item active">@ViewData["Title"]</li>
</ol>

<div class="d-flex justify-content-start flex-wrap demo">

</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel">
            <div class="panel-hdr header">
                <h2><i class='subheader-icon fal fa-id-card'></i>  @ViewData["Title"]</h2>
                <a href="javascript:void(0)" id="PrintBtn" class="text-right btn buttons-print btn-outline-primary btn-sm"><i class="fal fa-print"></i> Print</a>
            </div>
            <div class="panel-container show">
                <div class="panel-content" id ="content">
                    <div class="text-center"><h2 style="color:red">ใบแทน</h2></div>
                    <div class="text-center"><img src="~/img/VillageFundLoGo.jpg" /></div>
                    <br />
                    <div class="text-center"><h2>กองทุนหมู่บ้านและชุมชนเมืองแห่งชาติ</h2></div>
                    <div class="text-center"><h2>หนังสือสำคัญแสดงการจดทะเบียนเป็นนิติบุคคล</h2></div>
                    <div class="text-center"><h4>ใบสำคัญนี้ออกให้เพื่อแสดงว่า</h4></div>
                    <div class="text-center"><h3>กองทุนหมู่บ้าน @(Model.VillageName) หมู่@(Model.VillageMoo) ตำบล/แขวง@(Model.SubDistrict) อำเภอ/เขต@(Model.District) จังหวัด@(Model.Province)</h3></div>
                    <div class="text-center"><h3>ได้จดทะเบียนนิติบุคคลตามพระราชบัญญัติกองทุนหมู่บ้านและชุมชนเมืองแห่งชาติ พ.ศ.2547</h3></div>
                    <div class="text-center"><h3>ณ สำนักงานนายทะเบียน จังหวัด@(Model.Province)</h3></div>
                    <div class="text-center"><h3>เมื่อ วันที่ @Model._ApproveDate.Day เดือน @Helper.getMonthThai(Model._ApproveDate.Month) ปี พ.ศ.@(Model._ApproveDate.Year + 543)</h3></div>
                    <div class="text-center"><h3>ออกให้ ณ วันที่ @DateTime.Now.Day เดือน @Helper.getMonthThai(DateTime.Now.Month) ปี พ.ศ.@(DateTime.Now.Year + 543) </h3></div>
                    <br />
                    <div class="text-center"><img src="~/img/sign/signature.png" width="200px"/></div>
                    <div class="text-center"><h3>@ViewBag.Name</h3></div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <style type="text/css" media="print">
        @page 
        {
            size: auto;   /* auto is the initial value */
            margin: 0mm;  /* this affects the margin in the printer settings */
        }
              .header {
        display: none;
      }
    </style>
    <link rel="stylesheet" type="text/css" href="/css/notifications/toastr/toastr.css">
    <link rel="stylesheet" media="screen, print" href="~/css/datagrid/datatables/datatables.bundle.css">
    <link rel="stylesheet" href="~/css/notifications/sweetalert2/sweetalert2.bundle.css">
    <link rel="stylesheet" media="screen, print" href="~/css/formplugins/select2/select2.bundle.css">
    <script src="~/js/datagrid/datatables/datatables.bundle.js"></script>
    <script src="~/js/datagrid/datatables/datatables.export.js"></script>
    <script src="~/js/notifications/toastr/toastr.js"></script>
    <script src="~/js/notifications/sweetalert2/sweetalert2.bundle.js"></script>
    <script src="~/js/printThis.js"></script>
    <script>
        $("#PrintBtn").on("click",function (){
            $("#content").printThis();
        });
    </script>
}
