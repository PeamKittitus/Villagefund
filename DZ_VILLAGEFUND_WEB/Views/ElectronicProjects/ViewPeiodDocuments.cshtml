@model IEnumerable<DZ_VILLAGEFUND_WEB.Models.ProjectBudgetDocument>

<table class="table">
    <thead>
        <tr>
            <td class="text-center" style="width:50px;">ลำดับ</td>
            <td>ชื่อเอกสาร</td>
            <td style="width:150px;"></td>
        </tr>
    </thead>
    <tbody>
        @{
            if (Model.Count() > 0)
            {
                int Row = 1;
                foreach (var Get in Model)
                {
                    <tr>
                        <td class="text-center">@Row.</td>
                        <td>@Get.FileName</td>
                        <td><a href="/uploads/e-account/@Get.GencodeFileName" download="@Get.FileName" class="btn btn-danger btn-xs"><i class="fal fa-download"></i> ดาวน์โหลด</a></td>
                    </tr>

                    Row++;
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center">---- ไม่มีข้อมูล  ----</td>
                </tr>
            }
        }


    </tbody>
</table>