@model DZ_VILLAGEFUND_WEB.Models.ProjectAsset

<form id="JsonForm" enctype="multipart/form-data"
      asp-antiforgery="true"
      data-bv-message="This value is not valid"
      data-bv-feedbackicons-valid="glyphicon glyphicon-ok"
      data-bv-feedbackicons-invalid="glyphicon glyphicon-remove"
      data-bv-feedbackicons-validating="glyphicon glyphicon-refresh">
    <div class="panel-content">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="form-group">
                <label class="form-label"><strong> เลขที่ครุภัณฑ์ </strong> <span style="color:red">*</span></label>
                <input type="text" asp-for="AssetCode" class="form-control col-lg-12 col-md-12 col-sm-12" maxlength="100"
                       data-bv-notempty="true"
                       data-bv-notempty-message="กรุณากรอกข้อมูล" />
            </div>
            <div class="form-group">
                <label class="form-label"><strong> ชื่อครุภัณฑ์ </strong> <span style="color:red">*</span></label>
                <input type="text" asp-for="AssetName" class="form-control col-lg-12 col-md-12 col-sm-12"
                       data-bv-notempty="true"
                       data-bv-notempty-message="กรุณากรอกข้อมูล">
            </div>
            <div class="form-group">
                <label class="form-label"><strong>  อายุครุภัณฑ์ (ปี)</strong> <span style="color:red">*</span></label>
                <input type="text" asp-for="AssetAge" class="form-control col-lg-12 col-md-12 col-sm-12" maxlength="2"
                       data-bv-notempty="true"
                       data-bv-notempty-message="กรุณากรอกข้อมูล"
                       pattern="^[0-9]*$"
                       data-bv-message="เฉพาะตัวเลข" />
            </div>
            <div class="form-group">
                <label class="form-label"><strong>  จำนวนครุภัณฑ์</strong> <span style="color:red">*</span></label>
                <input type="text" asp-for="AmountUnit" class="form-control col-lg-12 col-md-12 col-sm-12" />
            </div>
            <div class="form-group">
                <label class="form-label"><strong>  ราคาสุทธิ</strong> <span style="color:red">*</span></label>
                <input type="text" asp-for="Amount" class="form-control col-lg-12 col-md-12 col-sm-12" />
            </div>

            <input type="hidden" asp-for="ProjectId" value="@ViewBag.ProjectId" />
            <input type="hidden" name="ProjectAssetId" value="@ViewBag.ProjectAssetId" />

            <div class="panel-content border-faded border-left-0 border-right-0 border-bottom-0 d-flex flex-row align-items-center m-3 pt-3">
                <button class="btn btn-primary ml-auto" type="button" id="Submit"> บันทึก</button>
            </div>
        </div>
    </div>
</form>