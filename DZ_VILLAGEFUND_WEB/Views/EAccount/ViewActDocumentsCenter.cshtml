@model IEnumerable<DZ_VILLAGEFUND_WEB.Models.TransactionFileAccActivityCenter>


<table class="table">
    <thead>
        <tr>
            <th class="text-center" width="50">ลำดับ</th>
            <th>ชื่อเอกสาร</th>
            <th class="text-center"></th>
            <th class="text-center" width="150" hidden></th>
        </tr>
    </thead>
    <tbody>
        @{
            if (Model.Count() > 0)
            {
                int Rows = 1;
                foreach (var Get in Model)
                {
                    <tr>
                        <td class="text-center">@Rows.</td>
                        <td>@Get.FileName</td>
                        <td class="text-center"><a href="/uploads/e-account-activity/@Get.GencodeFileName" download="@Get.FileName" class="btn btn-danger btn-xs"><i class="fal fa-download"></i> ดาวน์โหลด</a></td>
                        <td class="text-center" hidden>
                            <div class="custom-control custom-switch">
                                <input type="checkbox" class="custom-control-input setPermission IsApprove" data-val="@Get.TransactionFileId" id="insert-@Rows" @(Get.Approvemark == true ? "checked" : "")>
                                <label class="custom-control-label" for="insert-@Rows"></label> อนุมัติ/ไม่อนุมัติ
                            </div>
                        </td>
                    </tr>

                    Rows++;
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center">--- ไม่มีข้อมูล ---</td>
                </tr>
            }
        }

    </tbody>

</table>