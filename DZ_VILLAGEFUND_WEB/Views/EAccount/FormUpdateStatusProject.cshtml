@model DZ_VILLAGEFUND_WEB.ViewModels.EAccount.FormApproceAccountBudget



<form id="JsonForm" enctype="multipart/form-data"
      asp-antiforgery="true"
      data-bv-message="This value is not valid"
      data-bv-feedbackicons-valid="glyphicon glyphicon-ok"
      data-bv-feedbackicons-invalid="glyphicon glyphicon-remove"
      data-bv-feedbackicons-validating="glyphicon glyphicon-refresh">
    <div class="panel-content">
        <div class="col-lg-12 col-md-12 col-sm-12">

            <div class="form-group">
                <label class="form-label"><strong>  โอนเงินเข้าบัญชี</strong> </label>
                @Html.DropDownList("ProjectBbId", (IEnumerable<SelectListItem>)ViewBag.BookBank, new { @class = "col-lg-12 col-md-12 col-sm-12" })
            </div>
            <div class="form-group">
                <label class="form-label"><strong>  โอนเงินเข้าบัญชี</strong> </label>
                <input type="text" value="@Model.Amount.ToString("N")" class="form-control col-lg-12 col-md-12 col-sm-12" />
            </div>

            <input type="hidden" asp-for="Amount" >
            <input type="hidden" asp-for="AccountBudgetd" >

            <div class="panel-content border-faded border-left-0 border-right-0 border-bottom-0 d-flex flex-row align-items-center m-3 pt-3">
                <button class="btn btn-primary ml-auto" type="button" id="Submit"> บันทึก</button>
            </div>
        </div>
    </div>
</form>