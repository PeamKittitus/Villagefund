@{
    ViewData["Title"] = "หน้าหลัก";
}


<ol class="breadcrumb page-breadcrumb">
    <li class="breadcrumb-item"><a href="javascript:void(0);"> @ViewData["Title"]</a></li>
</ol>
<div class="row">

    <div class="col-lg-6 col-xl-3 order-lg-1 order-xl-1" id="leftSide"></div>

    <div class="col-lg-12 col-xl-6 order-lg-3 order-xl-2" id="JsonNewsData"></div>
    <div class="col-lg-6  col-xl-3 order-lg-2 order-xl-3" id="RightSide"> </div>

</div>

@section Scripts{
    <script type="text/javascript" src="~/customJs/home/Index.js"></script>
    <script type="text/javascript">
        $(function () {

            // center
            $("#JsonNewsData").html('<img  src="/img/loading.gif" width="200">');
            $.get("/Home/GetNewsIndex", function (JsonResult) {
                setTimeout(function () {

                    $("#JsonNewsData").html(JsonResult);
                }, 200);
            });

            // right
            $("#RightSide").html('<img  src="/img/loading.gif" width="200">');
            $.get("/Home/RightSide", function (JsonResult) {
                setTimeout(function () {
                    $("#RightSide").html(JsonResult);
                }, 200);
            });
        });
    </script>
}
