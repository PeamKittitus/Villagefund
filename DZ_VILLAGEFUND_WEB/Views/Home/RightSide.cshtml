<div class="card mb-2">
    <div class="card-body">
        <a href="javascript:void(0);" class="d-flex flex-row align-items-center">
            <div class='icon-stack display-3 flex-shrink-0'>
                <i class="fal fa-circle icon-stack-3x opacity-100 color-primary-400" style="color: #049dab"></i>
                <i class="fal fa-home icon-stack-1x opacity-100 color-primary-500" style="color: #049dab"></i>
            </div>
            <div class="ml-3 text-center">
                <strong style="font-size:1rem">จำนวน กทบ. ที่ลงในระบบ</strong><br>
                <strong class="font-weight-bold text-center" style="font-size:2rem;">
                    @{
                        int CountVillageAll = ViewBag.CountVillageAll;
                        @CountVillageAll.ToString("N0")
                    }
                </strong>
            </div>
        </a>
    </div>
</div>

@{
    if (ViewBag.IsAdministrator == "administrator")
    {
        <div class="card mb-2">
            <div class="card-body">
                <a href="/Villages/AdminVillagesIndex" class="d-flex flex-row align-items-center">
                    <div class='icon-stack display-3 flex-shrink-0' >
                        <i class="fal fa-circle icon-stack-3x opacity-100 color-primary-400" style="color: #049dab"></i>
                        <i class="fal fa-check-circle icon-stack-1x opacity-100 color-primary-500" style="color: #049dab"></i>
                    </div>
                    <div class="ml-3 text-center">
                        <strong style="font-size:1rem">  รายการพิจารณาอนุมัติ </strong> <br>
                        <strong class="font-weight-bold" style="font-size:2rem;">
                            @{
                                int CountERegisterWaiting = ViewBag.CountERegisterWaiting;
                                @CountERegisterWaiting.ToString("N0")
                            }
                        </strong>
                    </div>
                </a>
            </div>
        </div>
    }
}

<div class="card mb-g">
    <div class="row row-grid no-gutters">
        <div class="col-12">
            <div class="p-3">
                <h2 class="mb-0 fs-xl"> <i class="fal fa-users"></i> ผู้เข้าใช้งานล่าสุด</h2>
            </div>
        </div>
        <div class="col-12">
            <div class="p-3">
                <div class="p-3 p-md-3">

                    @{
                        var UsedLogs = ViewBag.UsedLogs as IEnumerable<DZ_VILLAGEFUND_WEB.ViewModels.Home.UsedLogs>;
                        if (UsedLogs.Count() > 0)
                        {
                            foreach (var Get in UsedLogs)
                            {
                                <div class="d-flex align-items-center">
                                    <div class="d-inline-block align-middle status status-success status-sm mr-2">
                                        <span class="profile-image-md rounded-circle d-block" style="background-image: url('/img/demo/avatars/user-avatar-vfoc.png'); background-size: cover;"></span>
                                    </div>
                                    <div class="flex-1 min-width-0">
                                        <span class="d-block text-truncate"> @Get.FullName</span>
                                        <div class="text-muted small text-truncate">
                                            @Get.ActiveDate <br /> <a href="javascript:void(0)" class="text-info"> @Get.EventName</a>
                                        </div>
                                    </div>
                                </div>
                                <hr />
                            }
                        }
                        else
                        {
                            <span class="text-center">--- ไม่พบข้อมูล ---</span>
                        }
                    }
                </div>

            </div>

        </div>
        <div class="col-12">
            <div class="p-3 text-center">
                <a href="/Settings/UsedIndex" class="btn-link font-weight-bold"> ดูทั้งหมด</a>
            </div>
        </div>
    </div>
</div>