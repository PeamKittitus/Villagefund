@model IEnumerable<DZ_VILLAGEFUND_WEB.ViewModels.EOffice.ViewUserViewModel>

<table class="table">
    <thead>
        <tr>
            <th style="width:50px;" class="text-center">ลำดับ</th>
            <th>ชื่อ</th>
            <th style="width:50px;"></th>
        </tr>
    </thead>
    <tbody>
        @{
            if (Model.Count() > 0)
            {
                int Rows = 1;
                foreach (var Get in Model)
                {
                    <tr>
                        <td class="text-center">@Rows.</td>
                        <td>@Get.Fullname</td>
                        <td class="text-center">
                            <a href="Javascript:void(0)" title="ลบ" data-id="@Get.Id" class="deleteUser"><i class="fal fa-eraser"></i></a>
                        </td>
                    </tr>

                    Rows++;
                }

            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center">--- ไม่มีข้อมูล ---</td>
                </tr>
            }
        }

    </tbody>
</table>