<input type="hidden" id="UId" value="@ViewData["UId"]">
<input type="hidden" id="ErrorMessage" value="@ViewData["ErrorMessage"]">
<input type="hidden" id="SuccessMessage" value="@ViewData["SuccessMessage"]">

@section Scripts{
    <link rel="stylesheet" type="text/css" href="/css/notifications/toastr/toastr.css">
    <link rel="stylesheet" href="~/css/notifications/sweetalert2/sweetalert2.bundle.css">
    <link rel="stylesheet" media="screen, print" href="~/css/formplugins/select2/select2.bundle.css">
    <script src="~/js/notifications/toastr/toastr.js"></script>
    <script src="~/js/notifications/sweetalert2/sweetalert2.bundle.js"></script>
    <script src="~/js/formplugins/select2/select2.bundle.js"></script>
    <script>
        $(function (e) {

            /*
            init
            Redirect Register Member page when Village Member Using E regsister
            */

            if ($("#Input_IsVillageMember").val() == "False") {
                sessionStorage.removeItem("IsVillageMember");
            }

            $("#Input_OrgId").select2();
            if ($("#ValidationSummary").length == true) {

                Swal.fire(
                    {
                        title: "แจ้งเตือนจากระบบ",
                        html: $("#ValidationSummary").html(),
                        type: "warning",
                        focusConfirm: false,
                        confirmButtonText: "ตกลง",
                        allowOutsideClick: false
                    }
                ).then(function (isConfirm) {
                    if (isConfirm.value == true) {
                        if (!sessionStorage.getItem("IsVillageMember")) {
                            window.location.href = "/Identity/Account/Register";
                        } else {
                            window.location.href = "/Identity/Account/Register?IsVillageMember=true";
                        }
                    }
                });

            } else {
                if ($("#ErrorMessage").val() != "" || $("#SuccessMessage").val() != "") {
                    if ($("#ErrorMessage").val() != "") {
                        Swal.fire(
                            {
                                title: "แจ้งเตือนจากระบบ",
                                text: $("#ErrorMessage").val(),
                                type: "warning",
                                confirmButtonText: "ตกลง",
                                allowOutsideClick: false
                            }
                        ).then(function (isConfirm) {
                            if (isConfirm.value == true && !sessionStorage.getItem("IsVillageMember")) {
                                if (isConfirm.value == true) {
                                    if (!sessionStorage.getItem("IsVillageMember")) {
                                        window.location.href = "/Identity/Account/Register";
                                    } else {
                                        window.location.href = "/Identity/Account/Register?IsVillageMember=true";
                                    }
                                }
                            }
                        });
                    }
                    if ($("#SuccessMessage").val() != "") {
                        Swal.fire(
                            {
                                title: "แจ้งเตือนจากระบบ",
                                text: $("#SuccessMessage").val(),
                                type: "success",
                                confirmButtonText: "ตกลง",
                                allowOutsideClick: false
                            }
                        ).then(function (isConfirm) {
                            if (isConfirm.value == true) {
                                window.location.href = "/Identity/Account/ConfirmAccount?Id=" + $("#UId").val();
                            }
                        });
                    }
                }
                else {
                    if (!sessionStorage.getItem("IsFirstCome")) {
                        $("#ViewPdpa").modal("show");
                        sessionStorage.setItem("IsFirstCome", true);
                    }
                }
            }

            $.getJSON('/Home/GetOrg', function (jsonData) {
                // Loop through JSON data and create select options
                $.each(jsonData, function (index, item) {
                    var option = $('<option>', {
                        text: item.text,
                        value: item.value,
                        disabled: item.disabled,
                        selected: item.selected
                    });

                    // Append option to select
                    $('#Input_OrgId').append(option);
                });

                if (sessionStorage.getItem("OrgId") != null) {
                    $("#Input_OrgId").val(sessionStorage.getItem("OrgId")).change();
                }

                //GetVillages
                if ($("#Input_IsVillageMember").val() == "True") {

                    sessionStorage.setItem("IsVillageMember", true);

                    $("#Input_VillageId").select2();
                    $("#Villages").attr("style", "display:block");

                    function InitVillageIds() {
                        $('#Input_VillageId').empty();
                        $.getJSON('/Home/GetVillages', { "OrgId": $("#Input_OrgId").val() }, function (jsonData) {
                            // Loop through JSON data and create select options
                            $.each(jsonData, function (index, item) {
                                var option = $('<option>', {
                                    text: item.text,
                                    value: item.value,
                                    disabled: item.disabled,
                                    selected: item.selected
                                });

                                // Append option to select
                                $('#Input_VillageId').append(option);
                            });
                            if (sessionStorage.getItem("VillageId") != null) {
                                $("#Input_VillageId").val(sessionStorage.getItem("VillageId")).change();
                            }
                        });
                    }

                    InitVillageIds();

                    //OnChange in Org
                    $("#Input_OrgId").change(function () {
                        InitVillageIds();
                    });
                }
                else {
                    $("#Input_IsVillageMember").val("False");
                }

            });

            //Save Value In Browser
            $("#submit").on("click", function () {
                sessionStorage.setItem("IDCard", $("#Input_IDCard").val());
                sessionStorage.setItem("Firstname", $("#Input_Firstname").val());
                sessionStorage.setItem("Lastname", $("#Input_Lastname").val());
                sessionStorage.setItem("UserName", $("#Input_UserName").val());
                sessionStorage.setItem("Email", $("#Input_Email").val());
                sessionStorage.setItem("Password", $("#Input_Password").val());
                sessionStorage.setItem("Confirm", $("#Input_ConfirmPassword").val());
                sessionStorage.setItem("OrgId", $("#Input_OrgId").val());
                sessionStorage.setItem("VillageId", $("#Input_VillageId").val());
            });
            //Load
            $("#Input_IDCard").val(sessionStorage.getItem("IDCard"));
            $("#Input_Firstname").val(sessionStorage.getItem("Firstname"));
            $("#Input_Lastname").val(sessionStorage.getItem("Lastname"));
            $("#Input_UserName").val(sessionStorage.getItem("UserName"));
            $("#Input_Email").val(sessionStorage.getItem("Email"));
            $("#Input_ConfirmPassword").val(sessionStorage.getItem("Confirm"));

        });
    </script>
}
